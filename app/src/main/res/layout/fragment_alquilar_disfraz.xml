<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentosCliente.AlquilarDisfrazFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Completar estos datos"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingStart="5dp"
            android:text="Escoge un punto de referencia en google maps Para la facilidad de entrega"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edt_direccion_cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/borde"
            android:hint="BARRIO"
            android:paddingVertical="10dp"
            android:paddingStart="10dp" />

        <EditText
            android:id="@+id/edt_referencia_cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/borde"
            android:hint="REFERENCIA"
            android:paddingVertical="10dp"
            android:paddingStart="10dp" />

        <EditText
            android:id="@+id/edt_punto_referencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/borde"
            android:drawableRight="@drawable/ic_maps"
            android:hint="PUNTO DE ENTREGA"
            android:paddingVertical="10dp"
            android:paddingStart="10dp" />


    </LinearLayout>

</FrameLayout>