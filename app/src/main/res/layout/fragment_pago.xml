<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentosCliente.PagoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Pago"
            android:textColor="@color/black"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingStart="5dp"
            android:text="Selecciona un metodo de pago"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/edt_direccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/borde"
            android:text="Efectivo"
            android:paddingVertical="10dp"
            android:paddingStart="10dp"
            android:drawableRight="@drawable/ic_pago_efectivo_borrar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/borde"
            android:gravity="center"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Tarjeta de Credito / Debito"
                android:paddingVertical="10dp"
                android:paddingStart="10dp"
                android:drawableRight="@drawable/ic_pago_tarjeta_borrar"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="300dp"
                android:layout_height="400dp"
                android:src="@drawable/tarjeta_credito" />

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_compra_hecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/boton"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="25dp"
        android:text="HECHO"
        android:textColor="@color/white"/>

</FrameLayout>